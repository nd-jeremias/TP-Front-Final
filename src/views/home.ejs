<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>

  <body class="bg-dark-subtle">

    <%- include('./partials/header.ejs') %>
    <!-- BARRA DE NAVEGACION -->
    
    <!-- PRESENTACION CON CAROUSEL -->

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner bg-dark portada">
        <div class="carousel-item active">
          <img src="./IMG/banner-bg.jpg" alt="Buenos Aires" class="img-fluid d-block w-100 opacity-50">
        </div>
        <div class="carousel-item">
          <img src="./IMG/banner-dc.webp" alt="Buenos Aires" class="img-fluid d-block w-100 opacity-50">
        </div>
        <div class="carousel-item">
          <img src="./IMG/banner-mv.webp" alt="Buenos Aires" class="img-fluid d-block w-100 opacity-50">
        </div>
      </div>
      <div class="card-img-overlay presentacion">
        <h1 class="pres-titulo">Películas y series ilimitadas
          en un solo lugar</h1>
        <h3 class="pres-text">Disfruta donde quieras.
          Cancela en cualquier momento.</h3>
      </div>
    </div>
    
    <div style="height: 90vh;">
      <!-- BUSCADOR -->
      
      <section class="container text-center mt-3 mb-4">
        <h2 class="p-3 ">¿Qué deseas ver?</h2>
        <form class="row">
          <input class="form-control col m-1" type="text" placeholder="Pobres criaturas. . .">
          <button type="button" id="tendencias" class="btn-1 btn btn-dark border-2 border-dark col-1 m-1"><svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><g fill="none" stroke="white" stroke-width="2"><circle cx="11" cy="11" r="7"/><path stroke-linecap="round" d="M11 8a3 3 0 0 0-3 3m12 9l-3-3"/></g></svg></button>
        </form>
      </section>
      
      <!-- LAS MAS ACLAMADAS -->
      <div class="container text-center mb-4">
        <h2 class="m-3">Las mas aclamadas</h2>
        <div class="row justify-content-center" id="aclamadas">
          <!-- Aqui se cargan las tarjetas "aclamadas" -->
        </div>
      </div>
    </div>

    <!-- PAGINAS" -->
    
    <div class="container text-center">
      <div class="row justify-content-center" id="cartelera">
        <h2 class="m-3">Cartelera</h2>
        <!-- Aqui se cargan las tarjetas de las peliculas -->
      </div>
    </div>

    <div class="d-flex justify-content-center m-3">
      <button type="button" class="btn-1 btn btn-dark border-2 border-dark m-2">Anterior</button>
      <button type="button" class="btn-1 btn btn-dark border-2 border-dark m-2">Siguiente</button>
    </div>

    <%- include('./partials/footer.ejs') %>
    <!-- FOOTER -->
    <!-- Traer peliculas Script-->
    <script src="getMovies.js"></script>
  </body>
</html>